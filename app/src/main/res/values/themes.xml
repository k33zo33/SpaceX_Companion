<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceX" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spacex_gray</item>
        <item name="colorSecondaryVariant">@color/spacex_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashScreenTheme" parent="Theme.SpaceX">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_50sp</item>
    </style>

    <style name="PagerTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textColor">@color/spacex_blue</item>
        <item name="android:textStyle">bold</item>
    </style>




</resources>